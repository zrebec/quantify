<div class="card">
    <div class="card-header">
        <h5 class="card-title">{{ title }}</h5>
    </div>
    <div class="card-body">
        <canvas id="{{ chart_id }}" width="400" height="250"></canvas>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const ctx = document.getElementById('{{ chart_id }}').getContext('2d');

        // Function to get CSS custom properties
        function getColor(className) {
            const element = document.createElement('div');
            element.className = className;
            document.body.appendChild(element);
            const styles = getComputedStyle(element);
            const borderColor = styles.getPropertyValue('border-color').trim();
            const backgroundColor = styles.getPropertyValue('background-color').trim();
            document.body.removeChild(element);
            return { borderColor, backgroundColor };
        }

        // Set color for every dataset
        const datasets = {{ datasets|json_encode|raw }}.map(dataset => {
            if (dataset.colorClass) {
                const colors = getColor(dataset.colorClass);
                return {
                    ...dataset,
                    borderColor: colors.borderColor,
                    backgroundColor: colors.backgroundColor,
                };
            }

            // If no color class is provided, use default colors from the dataset
            return {
                ...dataset,
                borderColor: dataset.borderColor,
                backgroundColor: dataset.backgroundColor,
            };
        });

        // Vytvor graf
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: {{ labels|json_encode|raw }},
                datasets: datasets
            },
            options: {
                responsive: true,
                layout: {
                    padding: 0
                },
                plugins: {
                    title: {
                        display: true,
                        text: '{{ title }}',
                        font: {
                            size: 16
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                return `${context.dataset.label}: ${context.parsed.y} ml`;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Usage (ml)'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Measurements'
                        }
                    }
                }
            }
        });
    });
</script>

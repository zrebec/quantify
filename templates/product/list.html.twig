{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1>Product Comparison Tool</h1>
    
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Products Available for Comparison</h5>
        </div>
        <div class="card-body">
            <form id="compare-form" action="/compare" method="get">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Compare</th>
                                <th>Product</th>
                                <th>Net Weight</th>
                                <th class="w-25">Counter</th>
                                <th class="w-25">Max Capacity</th>
                                <th class="w-25">Avg. Capacity</th>
                                <th class="w-25">Safe use</th>
                                <th>Design</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>&nbsp;</td>
                                <td>
                                    <input type="text" id="result_value" class="form-text w-100" placeholder="Name of new product">
                                </td>
                                <td>
                                    <input type="text" id="result_value" class="form-text" placeholder="Net weight">
                                </td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>
                                    <input type="text" id="result_value" class="form-text" placeholder="Design">
                                </td>
                                <td>
                                    <a href="/product/create" class="btn btn-primary w-100">
                                        Add
                                    </a>
                                </td>
                            {% for product in products %}
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input product-select" type="checkbox" 
                                               name="product[]" value="{{ product.id }}" id="product-{{ product.id }}">
                                    </div>
                                </td>
                                <td>
                                    <a href="/product/{{ product.id }}">{{ product.brand }}</a>
                                </td>
                                <td>{{ product.net_weight }} g</td>
                                <td>
                                    {{ product.measurement_count|default(0) }} 
                                    {% if product.measurement_count == 1 %}
                                        meranie
                                    {% elseif product.measurement_count > 1 and product.measurement_count < 5 %}
                                        merania
                                    {% else %}
                                        meraní
                                    {% endif %}
                                </td>
                                <td>{{ product.max_capacity|default(0) }} ml</td>
                                <td>{{ product.average_capacity|number_format(0) }} ml</td>
                                <td>
                                    {{ product.safe_use|default('0') }} 
                                    {% if product.safe_use == 1 %}
                                        použitie
                                    {% elseif product.safe_use > 1 and product.safe_use < 5 %}
                                        použitia
                                    {% else %}
                                        použití
                                    {% endif %}
                                </td>
                                <td>{{ product.design|default('-') }}</td>
                                <td>
                                    <a href="{{ product.link }}" target="_blank" class="icon-link icon-link-hover">
                                        <img src="/assets/images/link.svg" alt="Link icon">
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                
                <div class="mt-3">
                    <button type="button" id="compare-btn" class="btn btn-primary" disabled>
                        Compare Selected Products
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Usage Guide</h5>
        </div>
        <div class="card-body">
            <p>This tool allows you to compare different products based on their capacity levels.</p>
            <p>How to use:</p>
            <ol>
                <li>Select products you want to compare (up to 5)</li>
                <li>Click "Compare Selected Products" to see detailed comparison</li>
                <li>Or click "Details" to see individual product analysis</li>
            </ol>
        </div>
    </div>
</div>

{% endblock %}

{% block scripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const checkboxes = document.querySelectorAll('.product-select');
        const compareBtn = document.getElementById('compare-btn');
        const form = document.getElementById('compare-form');
        
        function updateCompareButton() {
            const checked = document.querySelectorAll('.product-select:checked');
            compareBtn.disabled = checked.length < 2;
            
            if (checked.length > 5) {
                alert('Please select a maximum of 5 products to compare.');
                this.checked = false;
            }
        }
        
        checkboxes.forEach(checkbox => {
            checkbox.addEventListener('change', updateCompareButton);
        });
        
        compareBtn.addEventListener('click', function() {
            const checked = document.querySelectorAll('.product-select:checked');
            const ids = Array.from(checked).map(cb => cb.value).join(',');
            window.location.href = '/compare?ids=' + ids;
        });
    });
</script>
{% endblock %}
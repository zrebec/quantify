{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1>Product Comparison Tool</h1>
    
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Products Available for Comparison</h5>
        </div>
        <div class="card-body">
            <form id="compare-form" action="/compare" method="get">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Compare</th>
                                <th>Product</th>
                                <th>Net Weight</th>
                                <th>Max Capacity</th>
                                <th>Avg. Capacity</th>
                                <th>Design</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for product in products %}
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input product-select" type="checkbox" 
                                               name="product[]" value="{{ product.id }}" id="product-{{ product.id }}">
                                    </div>
                                </td>
                                <td>{{ product.brand }}</td>
                                <td>{{ product.net_weight }} g</td>
                                <td>{{ product.max_capacity|default(0) }} ml</td>
                                <td>{{ product.average_capacity|number_format(2) }} ml</td>
                                <td>{{ product.design|default('-') }}</td>
                                <td>
                                    <a href="/product/{{ product.id }}" class="btn btn-sm btn-info">
                                        Details
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                
                <div class="mt-3">
                    <button type="button" id="compare-btn" class="btn btn-primary" disabled>
                        Compare Selected Products
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Usage Guide</h5>
        </div>
        <div class="card-body">
            <p>This tool allows you to compare different products based on their capacity levels.</p>
            <p>How to use:</p>
            <ol>
                <li>Select products you want to compare (up to 5)</li>
                <li>Click "Compare Selected Products" to see detailed comparison</li>
                <li>Or click "Details" to see individual product analysis</li>
            </ol>
        </div>
    </div>
</div>

{% endblock %}

{% block scripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const checkboxes = document.querySelectorAll('.product-select');
        const compareBtn = document.getElementById('compare-btn');
        const form = document.getElementById('compare-form');
        
        function updateCompareButton() {
            const checked = document.querySelectorAll('.product-select:checked');
            compareBtn.disabled = checked.length < 2;
            
            if (checked.length > 5) {
                alert('Please select a maximum of 5 products to compare.');
                this.checked = false;
            }
        }
        
        checkboxes.forEach(checkbox => {
            checkbox.addEventListener('change', updateCompareButton);
        });
        
        compareBtn.addEventListener('click', function() {
            const checked = document.querySelectorAll('.product-select:checked');
            const ids = Array.from(checked).map(cb => cb.value).join(',');
            window.location.href = '/compare?ids=' + ids;
        });
    });
</script>
{% endblock %}